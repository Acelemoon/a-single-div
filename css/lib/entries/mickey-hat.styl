/*-----------------------------

Mickey Hat

-----------------------------*/

#mickey-hat
  background: lightpink

  div
    width: 200px
    height: 200px
    margin-left: -(@width/2)
    margin-top: -80px

    border-radius: 0 70% 0 100%
    border-bottom: 7px solid #333
    border-left: 7px solid #333

    background: #222
    background-image: radial-gradient(circle at 170px 220px,
                                        rgba(255,255,255,0) 70%,
                                        rgba(255,255,255,.15) 90%),
                      radial-gradient(circle at 50px 80px,
                                        transparent 60%,
                                        #000 90%)

    box-shadow: -7px 7px 6px -2px rgba(0,0,0,.3)

    -webkit-transform: rotate(-45deg)
    transform: rotate(-45deg)

    @media (max-width: 400px)

      -webkit-transform: scale(.8) rotate(-45deg)
      transform: scale(.8) rotate(-45deg)

    &:before
      width: 90px
      height: 90px

      top: -80px
      left: 55px

      background: #333
      background-image: radial-gradient(circle at 80px 0px,
                                          transparent 60%,
                                          rgba(255,255,255,.2) 90%)

      border-radius: 50%

      box-shadow: -3px 3px 0 4px #222

    &:after
      width: 90px
      height: 90px

      top: 55px
      left: 190px

      background: #333
      background-image: radial-gradient(circle at 80px 0px,
                                          transparent 60%,
                                          rgba(255,255,255,.2) 90%)

      border-radius: 50%

      box-shadow: -3px 3px 0 4px #222,
                  -132px -34px 0 -34px #222,
                  -103px -5px 0 -34px #222,
                  -130px -7px 0 -44px white,
                  -131px -6px 0 -41px #222,
                  -130px -12px 0 -43px #222,
                  -125px -7px 0 -43px #222,
                  -129px -13px 0 -40px white,
                  -124px -8px 0 -40px white,
                  -138px 1px 0 -44px #e95b4f,
                  -137px 0 0 -42px #222,
                  -130px -7px 0 -30px #d3b579,
                  -129px -8px 0 -26px #222,
                  -129px -8px 0 -18px white,
                  -129px -7px 0 -1px #e95b4f